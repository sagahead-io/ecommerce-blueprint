{
  "name": "sagahead-ecommerce-blueprint",
  "description": "Sagahead.io e-commerce blueprint",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "yarn workspaces foreach --exclude sagahead-ecommerce-blueprint --exclude '@frontends/*' --exclude '@commons/*' -tvpi -j 8 run start",
    "start:commons": "yarn workspaces foreach --exclude sagahead-ecommerce-blueprint --exclude '@frontends/*' --exclude '@services/*' -tvpi -j 8 run build:watch",
    "start:frontends": "yarn workspaces foreach --exclude sagahead-ecommerce-blueprint --exclude '@services/*' --exclude '@commons/*'  -tvpi -j 8 run start",
    "build": "yarn workspaces foreach --exclude sagahead-ecommerce-blueprint -tv run build",
    "build:commons": "yarn workspaces foreach --exclude sagahead-ecommerce-blueprint --exclude '@frontends/*' --exclude '@services/*' -tv run build:commons",
    "test": "npm-run-all test:unit test:integration",
    "test:ci": "npm-run-all test:unit-ci test:integration",
    "test:unit": "jest",
    "test:unit-ci": "jest --coverage",
    "test:integration": "yarn workspaces foreach run test:integration",
    "prettier": "prettier --write \"@(services|commons)/**/src/**/*.{ts,js,jsx}\"",
    "lint": "eslint -c .eslintrc.js --max-warnings 0 \"@(services|commons)/**/@(src|test|__test__)/**/!(libzip|pnp).@(tsx|ts|js)\"",
    "lint:fix": "eslint -c .eslintrc.js --max-warnings 0 \"@(services|commons)/**/@(src|test|__test__)/**/!(libzip|pnp).@(tsx|ts|js)\" --fix",
    "each": "yarn workspaces foreach --exclude sagahead-ecommerce-blueprint ${0} ${1}",
    "doctor": "yarn dlx @yarnpkg/doctor"
  },
  "workspaces": [
    "services/*",
    "commons/*",
    "frontends/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^7",
    "@types/eslint-config-prettier": "^6",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@yarnpkg/pnpify": "^2.4.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "lint-staged": {
    "*.(ts|js|html|css)": [
      "prettier --write",
      "git add"
    ],
    "*.(ts)": [
      "yarn lint:fix",
      "yarn lint"
    ]
  }
}
